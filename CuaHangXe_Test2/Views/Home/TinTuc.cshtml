@using CuaHangXe_Test2.Controllers
@model List<HomeController.TinTucModel>

@{
    ViewBag.Title = "TinTuc";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    .container {
        opacity: 1;
        transition: opacity 1s ease;
    }

    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        border-radius: 15px;
        position: relative;
        overflow: hidden;
    }

        .card:hover {
            transform: translateY(-15px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
        transition: transform 0.3s ease;
    }

        .card-body:hover {
            transform: scale(1.05);
        }

    .btn-custom {
        background-color: #000000;
        color: #ffffff;
        border: none;
        padding: 12px 25px;
        text-align: center;
        font-size: 16px;
        font-weight: bold;
        letter-spacing: 1px;
        transition: background-color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
        width: 100%;
        border-radius: 5px;
        margin-top: 20px;
    }

        .btn-custom:hover {
            background-color: #333333;
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.1);
    }

    .card-title {
        transition: color 0.3s ease;
    }

    .card:hover .card-title {
        color: #007bff;
    }
</style>

<div class="container my-5">
    <div class="row row-cols-1 row-cols-md-3 g-4 d-flex align-items-stretch">
        @foreach (var tinTuc in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 rounded">
                    <img src="@Url.Content("~/Images/" + tinTuc.NoiDung.FirstOrDefault()?.HinhAnh)" class="card-img-top" alt="@tinTuc.TieuDe">
                    <div class="card-body">
                        <h5 class="card-title">@tinTuc.TieuDe</h5>
                        <a href="#" class="btn btn-custom">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
