@model List<CuaHangXe_Test2.Models.NhaCungCap>
@using CuaHangXe_Test2.Controllers
@{
    ViewBag.Title = "NhaCungCap";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js" rel="stylesheet" />

<style>
  
    .jumbotron {
        padding: 6rem 2rem;
        color: white;
        background-color: rgba(0, 0, 0, 0.7);
        border-radius: 10px;
        background-image: url('@Url.Content("~/images/blog7.jpg")');
        background-size: cover;
        background-position: center;
        animation: fadeIn 2s ease-out;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.4);
    }

    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    /* Card css */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        background-color: #ffffff;
        overflow: hidden;
        box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.1);
        height: 100%;
        border: none;
    }

    .card:hover {
        transform: translateY(-10px) scale(1.05);
        box-shadow: 0px 20px 50px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 2rem;
        font-size: 1rem;
    }

    .card-title {
        color: #333;
        font-weight: bold;
        font-size: 1.5rem;
        margin-bottom: 15px;
        text-align: center;
    }

    .card-text {
        color: #666;
        margin-bottom: 12px;
    }

    .btn-dark {
        background-color: #000;
        color: #fff;
        font-size: 0.9rem;
        text-transform: uppercase;
        border-radius: 5px;
        position: relative;
        overflow: hidden;
        width: 100%;
        padding: 12px;
    }

    .btn-dark:hover {
        background-color: #333;
        color: #fff;
    }

    .btn-dark::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 300%;
        height: 300%;
        background-color: #fff;
        transition: all 0.4s ease;
        border-radius: 50%;
        z-index: 0;
        transform: translate(-50%, -50%);
    }

    .btn-dark:hover::before {
        width: 0;
        height: 0;
    }

    /* Responsiveness */
    @@media (max-width: 768px) {
        .jumbotron {
            padding: 4rem 1rem;
        }
        .card-body {
            padding: 1.5rem;
        }
    }
</style>

<div class="container my-5">
    <!-- Banner giới thiệu -->
    <div class="jumbotron text-white text-center">
        <h2 class="display-5 font-weight-bold">Tìm đại lý gần bạn nhất</h2>
        <p class="lead">Tìm đại lý đang mở cửa và gần bạn nhất. Chúng tôi sẵn sàng hỗ trợ bạn</p>
    </div>
</div>

<!-- danh sách nhà cung cấp -->
<h2 class="text-center mb-4">Danh Sách Nhà Cung Cấp</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var ncc in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">@ncc.TenNhaCungCap</h5>
                    <p class="card-text"><strong>Địa Chỉ:</strong> @ncc.DiaChiNhaCungCap</p>
                    <p class="card-text"><strong>Số Điện Thoại:</strong> @ncc.SoDienThoaiNhaCungCap</p>
                    <p class="card-text mb-4"><strong>Email:</strong> @ncc.EmailNhaCungCap</p>
                    <a href="@Url.Action("ChiTietNhaCungcap", "Home", new { id = ncc.MaNhaCungCap })" class="btn btn-dark">Chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
