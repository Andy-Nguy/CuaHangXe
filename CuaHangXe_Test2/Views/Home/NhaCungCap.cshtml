@model List<CuaHangXe_Test2.Models.NhaCungCap>
@using CuaHangXe_Test2.Controllers
@{
    ViewBag.Title = "NhaCungCap";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<style>
    /* Jumbotron css */
    .jumbotron {
        padding: 4rem 2rem;
        color: white;
        background-color: rgba(0, 0, 0, 0.6);
        border-radius: 10px;
        background-image: url('@Url.Content("~/images/1.jpg")');
        background-size: cover;
        background-position: center;
    }

    /* Card css */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
        background-color: #f9f9f9;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        color: #333;
        font-weight: bold;
        font-size: 1.25rem;
        margin-bottom: 15px;
    }

    /* Button css */
    .btn-dark {
        background-color: #000;
        color: #fff;
        font-size: 0.9rem;
        text-transform: uppercase;
        border-radius: 5px;
    }

    .btn-dark:hover {
        background-color: #333;
        color: #fff;
    }

</style>

<div class="container my-5">
    <!-- Banner giới thiệu -->
    <div class="jumbotron text-white text-center">
        <h2 class="display-5 font-weight-bold">Tìm đại lý gần bạn nhất</h2>
        <p class="lead">Tìm đại lý đang mở cửa và gần bạn nhất. Chúng tôi sẵn sàng hỗ trợ bạn</p>
    </div>
</div>

<!-- danh sách nhà cung cấp -->
<h2 class="text-center mb-4">Danh Sách Nhà Cung Cấp</h2>
<div class="row">
    @foreach (var ncc in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <h5 class="card-title text-dark font-weight-bold">@ncc.TenNhaCungCap</h5>
                    <p class="card-text mb-2"><strong>Địa Chỉ:</strong> @ncc.DiaChiNhaCungCap</p>
                    <p class="card-text mb-2"><strong>Số Điện Thoại:</strong> @ncc.SoDienThoaiNhaCungCap</p>
                    <p class="card-text mb-4"><strong>Email:</strong> @ncc.EmailNhaCungCap</p>
                    <!-- nút chi tiết  -->
                    <a href="@Url.Action("ChiTietNhaCungcap", "Home", new { id =ncc.MaNhaCungCap })" class="btn btn-dark btn-block text-uppercase font-weight-bold">Chi tiết</a>
                    @*<a href="@Url.Action("ChiTietNhaCungcap", "Home", new { id = (string)ncc.MaNhaCungCap })" class="btn btn-dark btn-block text-uppercase font-weight-bold">Chi tiết</a>*@
                    @*<a href="/Home/ChiTietNhaCungCap?id=@ncc.MaNhaCungCap">ChiTietNhaCungCap</a>*@
                    @*@Html.ActionLink("chi tiết ", "ChiTietNhaCungCap", "Home", new { id = ncc.MaNhaCungCap });*@
                </div>
            </div>
        </div>
    }
</div>